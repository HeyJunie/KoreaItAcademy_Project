<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- Spring에서 새로 배우는 스타일 -->
<mapper namespace="com.koreait.project.hyejun.dao.usersDao">
	
	<select id="usersLogin" parameterType="com.koreait.project.hyejun.dto.UsersDto" resultType="com.koreait.project.users.dto.UsersDto">
		select *
		  from users
		 where email = #{email}, password = #{password}
	</select>
	
</mapper>