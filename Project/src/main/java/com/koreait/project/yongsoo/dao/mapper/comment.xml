<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.koreait.project.yongsoo.dao.commentDao">
	
	<select id="getCommentList" parameterType="int" resultType="com.koreait.project.dto.CommentsDto">
		SELECT *
		  FROM COMMENTS
		 WEHRE COMMENT_REFERER_NO = #{meeting_no} 
	</select>
	
	<insert id="addComment" parameterType="com.koreait.project.dto.CommentsDto">
		INSERT INTO COMMENTS
		VALUES (COMMENTS_SEQ.NEXTVAL, 2, #{comment_referer_no}, #{user_no}, #{comment_content}, SYSDATE, 0)
	</insert>
	
	
	
	
	
</mapper>